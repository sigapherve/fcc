{% extends 'base.html.twig' %}

{% block title %}Quotation {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table> 
    <tr><td colspan="3">Cotation pour 
        {% for produit in produits %}
            {{ produit.name }} ({{ produit.qty }})CTNS, &nbsp;
         {% endfor %}
        </td> 
      {% for reponse in reponses %}
        <tr>
            <td>{{ reponse.message  }}</td><td>{{ reponse.amount|number_format(0, '.', ',') }}&nbsp;{{reponse.amountcurrency}}</td><td>Payable At :  {{ checkout.shipto.name }}</td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
